@page
@using WorkersTurnScheduler.Domain
@model WorkersTurnScheduler.Pages.SchedulerArea.Worker.CreateModel
@{
}

<div class="container">
    <h2> New worker </h2>
    <div class="row mb-3 mt-5">
        <h3>Personal data</h3>
        <div class="col-4">
            <label> Name: </label>
            <input type="text" name="name"/>
        </div>
        <div class="col-4">
            <label> Surname: </label>
            <input type="text" name="surname" />
        </div>
    </div>
    <div class="row mb-3">
        <h3>Professional details</h3>
        <div class="col-4">
            <label>Is active?</label>
            <label>  </label>
        </div>
     </div>
     <div class="row mb-3">
        <div class="row mt-1">
            <label> Contract type: </label>
            <div class="col-5">
                <select class="form-control"
                        asp-items="Html.GetEnumSelectList<ContractType>()">
                    <option value="">-- Select Department --</option>
                </select>
            </div>
        </div>
        <input type="text" name="id" hidden />
        <div class="row mt-1">
            <h5> Weekly hours contracted: </h5>
            <div class="col-md-5"> <p><label> Minimum: </label> <input type="number" min="0" />  </p></div>
            <div class="col-md-5"> <p><label> Maximum: </label> <input type="number" min="0" /> </p></div>
        </div>
        <div class="row mt-1">
            <h5> Weekly days contracted: </h5>
            <div class="col-md-5"> <p><label> Minimum: </label> <input type="number" min="0" /> </p></div>
            <div class="col-md-5"> <p><label> Maximum: </label> <input type="number" min="0" /> </p></div>
        </div>
        <div class="row mt-1">
            <h5> Working day shift duration: </h5>
            <div class="col-md-5"> <p><label> Minimum: </label> <input type="number" min="0" /> </p></div>
            <div class="col-md-5"> <p><label> Maximum: </label> <input type="number" min="0" /> </p></div>
        </div>
     </div>
    <div class="row mt-2">
        <a href="#"> <button type="submit" value="Save" class="btn btn-primary"> Save </button> </a>
        <a href="#"> <button class="btn btn-secondary"> Cancel </button> </a>
    </div>
</div>